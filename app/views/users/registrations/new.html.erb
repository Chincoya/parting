<% provide(:title, 'NEW USER') %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Your name' %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email", placeholder: 'your@mail.com' %>
  </div>

  <div class="field">
    <%= f.label :password, 'Pwd' %>
    <%= f.password_field :password, autocomplete: "new-password", pattern: ".{6,}", title: 'Six or more characters', placeholder: '******' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Pwd confirm', class: 'pass-confirm' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :icon %>
    <%= f.file_field :icon, accept: 'image/jpeg,image/png' %>
  </div>  

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
